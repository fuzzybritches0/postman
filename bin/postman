#!/bin/bash

[ ! -d "${HOME}/.config/postman" ] && mkdir -p "${HOME}/.config/postman"
[ ! -d "./inbox" ] && mkdir -p "./inbox"
[ ! -d "./sent" ] && mkdir -p "./sent"
[ ! -d "./draft" ] && mkdir -p "./draft"


create_sort_sh() {

echo '# The following two lines demonstrate how to filter incoming mail into'
echo '# different directories.'
echo '#[ "$( echo "${subject,,}" | grep "linux fan club" )" ] && dir="linux-fan-club"'
echo '#[ "$( echo "${from,,}" | grep "max.maier@gmail.com" )" ] && dir="max_maier"'

}

[ ! -f "${HOME}/.config/postman/sort.sh" ] && create_sort_sh > "${HOME}/.config/postman/sort.sh"

sortmail() {
	dir="inbox"
	if [ -f "${HOME}/.config/postman/sort.sh" ]; then
		. "${HOME}/.config/postman/sort.sh"
	fi
	echo "${dir}"
}


find_email() {
	for word in ${1}; do
		if [ "${word/@}" != "${word}" ]; then
			word="${word/<}"
			word="${word/>}"
			echo "${word}"
			found=1
			break
		fi
	done
	[ ! "${found}" ] && echo "UNKNOWN-${num}"
}

tofilen() {
	subject="${1,,}"
	subject="${subject// /_}"
	subject="${subject//!}"
	subject="${subject//&}"
	subject="${subject//$}"
	subject="${subject//\*}"
	subject="${subject//\\}"
	subject="${subject//\(}"
	subject="${subject//\)}"
	subject="${subject//\{}"
	subject="${subject//\}}"
	subject="${subject//;}"
	subject="${subject//\'}"
	subject="${subject//\"}"
	subject="${subject//\`}"
	subject="${subject//~}"
	subject="${subject///}"
	echo "${subject}"
}

save_mail() {
	mail="${1}"
	name="${2}"
	directory="${3}"
	count="${4}"
	if [ -f "./${3}/${2}_${4}.eml" ]; then
		(( count++ ))
		save_mail "${1}" "${2}" "${3}" "${4}"
	fi
	mv "${1}" "./${3}/${2}_${4}.eml"
	ln -s "../${3}/${2}_${4}.eml" "./new/${2}_${4}.eml"
	exit 0
}

num=${RANDOM}${RANDOM}
mail="./inbox/${num}"
pointer=
head=1
while IFS= read line; do
	echo "${line}" >> "${mail}" || exit 1
	if [ "${head}" == "1" ]; then
		[ "${#line}"  -le "1" ] && head=
		[ "${line:0:3}"  == "To:" ] && header[0]="${line:3}" && pointer=0
		[ "${line:0:3}"  == "Cc:" ] && header[1]="${line:3}" && pointer=1
		[ "${line:0:5}"  == "Date:" ] && header[2]="${line:5}" && pointer=2
		[ "${line:0:5}"  == "From:" ] && header[3]="${line:5}" && pointer=3
		[ "${line:0:8}"  == "Sender:" ] && header[4]="${line:7}" && pointer=4
		[ "${line:0:8}"  == "Subject:" ] && header[5]="${line:8}" && pointer=5
		[ "${line:0:1}"  == " " ] && header[${pointer}]="${header[${pointer}]}${line}"
	fi

done

to="${header[0]}"
cc="${header[1]}"
date="${header[2]}"
from="${header[3]}"
sender="${header[4]}"
subject="${header[5]}"

maildir="$(basename ${PWD})"
directory="$(sortmail)"
[ ! -d "./${directory}" ] && mkdir -p "./${directory}"
date=$(date -d "${date}" +%Y-%m-%dT%H:%M:%S%:z || date +%Y-%m-%dT%H:%M:%S%:z)
from=$(find_email "${from}")
subj=$(tofilen "${subject}")
name="${date}_${from}_${subj}"
[ ! -d "./new" ] && mkdir ./new
count=0
save_mail "${mail}" "${name}" "${directory}" "${count}" "${ctype}"
